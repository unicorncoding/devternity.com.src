                          span.fa-layers-text.fa-inverse(data-fa-transform="shrink-11.5 rotate--30") BEST
                      span {{product.price}} 
                      strike {{product.price + product.extra}}
                      | â‚¬
                      br
                      i.fas(style="font-size: 40px" ng-class="product.battery")
                      br
                      //- remove width auto after CDN cache expires
                      a.button(ng-if="event.status != 'booked'" href="{{event.register}}" style="padding: 0 0.5em; width: auto") Buy
                    span(ng-if="product.sold_out || event.status == 'booked'") SOLD OUT

