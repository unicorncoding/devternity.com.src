                    if speaker.tags
                      each tag, index in speaker.tags
                        span.tag ##{tag}
                        if index != speaker.tags.length - 1 
                          |  
                div.who !{speaker.description}
          if data.hasUnknownWorkshops
            br
            h3.title More coming soon. Subscribe for the final announcement alert:
            form.subscribe(ng-submit="onSubscribe()")
              div {{subscribeMessage}}
              input(type="email" ng-model="subscriber" placeholder="<your email address>")
              input(type="submit" value="Subscribe")          
            h5
              each link, social in data.socials
                a(href=link)
                  i(class=`fa fa-${social}`)
                |  &nbsp;                

    section#tickets-container.wrapper.style1.tickets.align-center
      div.container
        header
          h1 Tickets
          p The number of seats is limited and every year we are running out of tickets quickly. Secure your seat now (and feel free to change the information about the participants later).

        div.row
          section(class="feature 3u 12u$(medium) 12u$(small)") 
            | &nbsp;
          section(class="tick feature 6u 12u$(medium) 12u$(small)")
            div.row: h3.title Tickets are limited
            div.row.nopadding
              each product in data.pricing.products
                section(class="4u 12u$(small)")
