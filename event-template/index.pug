          li: a(ng-click="slideTo('#workshops-container')" alt="Workshops") Workshops
          if data.sponsorship
            li: a(ng-click="slideTo('#support-container')" alt="Sponsors") Sponsors
          li: a(href="code_of_conduct.html" alt="Code of Conduct") Code of Conduct
          li: strong: a(href="http://go.devternity.com/rix_volunteer" alt="Call for Volunteers") Volunteer
          li: strong: a(ng-click="slideTo('#tickets-container')") Attend
          each link, social in data.socials
            li
              a(href=link)
                i(class=`fa fa-${social}`)
          each history in data.history
            li: a(href=`/rix/${history}` alt=`DevTernity ${history}`) #{history}

