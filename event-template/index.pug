                    section(class=`${12 / package.sponsorsPerLine}u 12u$(medium)`)
                      a(target="_blank" rel="noopener" href=sponsor.link)
                        img.lazy(style="max-width: 250px; max-height: 100px" class=`${package.grayscale ? 'grayscale' : ''}` data-src=`images/${sponsor.logo}`)
